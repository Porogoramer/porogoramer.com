{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "ES6",
    "strict": true,
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "**/main.js",
    "eslint.config.mjs",
    "src/setupTests.ts",
    "webpack.config.cjs",      // Exclude webpack.config.js
    "src/index.js"            // Exclude non-existent index.js
  ],
  "types": [
    "typePatches"
  ]
}
